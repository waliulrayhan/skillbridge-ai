generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  name              String
  email             String             @unique
  password          String
  role              UserRole
  skills            String[]           // Remove the `?` here
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  courses           Course[]           @relation("UserCourses")
  skillAssessments  SkillAssessment[]  @relation("UserSkillAssessments")
  certifications    Certification[]    @relation("UserCertifications")
}


model Course {
  id          Int              @id @default(autoincrement())
  title       String
  description String?
  provider    String
  category    String
  difficulty  String
  duration    Int
  imageUrl    String?
  createdById Int
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  createdBy   User             @relation(fields: [createdById], references: [id], name: "UserCourses")
  certifications Certification[] @relation("CourseCertifications")
}

model Job {
  id            Int       @id @default(autoincrement())
  title         String
  companyName   String
  location      String
  description   String
  skillsRequired String[]
  postedAt      DateTime  @default(now())
}

model SkillAssessment {
  id        Int       @id @default(autoincrement())
  userId    Int
  skillName String
  score     Int
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], name: "UserSkillAssessments")
}

model Certification {
  id        Int       @id @default(autoincrement())
  userId    Int
  courseId  Int
  issuedAt  DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id], name: "UserCertifications")
  course    Course    @relation(fields: [courseId], references: [id], name: "CourseCertifications")
}

enum UserRole {
  STUDENT
  EDUCATOR
  ADMIN
}
